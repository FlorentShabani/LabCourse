@model Travista.Models.Domain.TravelAgency
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "View Travel Agency";
}
<head>
    <link rel="stylesheet" href="~/css/travelagency_addform.css" asp-append-version="true">
</head>

<html lang="en">
<body>
    <main class="form-signin w-100 siform border border-info shadow rounded-3">

        <form method="post" action="ViewTravelAgencyPost" enctype="multipart/form-data">
            <div class="text-center">
                <img class="mb-4" src="~/images/travista-dark.png" alt="" width="200" height="80">
            </div>
            <h1 class="h3 mb-3 fw-normal text-center">Add a Travel Agency</h1>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="ID_TravelAgency" placeholder="Travel Agency ID" readonly required>
                        <label for="">ID</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="emri" placeholder="Prishtina" required>
                        <label for="">Name</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="email" class="form-control rounded-bottom mt-2" asp-for="email" required
                               placeholder="alex@gmail.com">
                        <label>Email</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="number" class="form-control rounded-bottom mt-2" asp-for="price" required
                               placeholder="30.99">
                        <label>Price</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="number" class="form-control rounded-bottom mt-2" asp-for="ID_Country" required readonly
                               placeholder="Filan Fisteku">
                        <label for="">Country</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="number" class="form-control rounded-bottom mt-2" asp-for="ID_City" required readonly
                               placeholder="Filan Fisteku">
                        <label for="">City</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="streetAddress" required
                               placeholder="Filan Fisteku">
                        <label for="">Street Address</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="additionalAddressInfo" required
                               placeholder="Filan Fisteku">
                        <label for="">
                            Additional address information
                        </label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="postalCode" required
                               placeholder="Filan Fisteku">
                        <label for="">Postal Code</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="phoneNumber" required
                               placeholder="Filan Fisteku">
                        <label for="">Phone Number</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating my-2">
                        <textarea class="form-control" maxlength="8000" placeholder=" Leave a comment here" asp-for="description" style="height: 100px"></textarea>
                        <label for="">Description</label>
                    </div>
                 </div>

                <div class="col-md-6">
                    <button class="w-100 btn btn-lg btn-primary" style="margin: 10px 0;" type="submit"><i class="fas fa-pen-to-square" style="margin-right: 3px;"></i>Update Travel Agency</button>
                </div>
                <div class="col-md-6">
                    <button class="w-100 btn btn-lg btn-danger" style="margin: 10px 0;" type="submit" formaction="@Url.Action("DeleteTravelAgency", "TravelAgency")"><i class="fa-regular fa-trash-can" style="margin-right: 3px"></i>Delete Travel Agency</button>
                </div>
        </form>
    </main>

    <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
