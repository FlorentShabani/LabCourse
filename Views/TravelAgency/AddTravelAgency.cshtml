@model Travista.Models.Domain.TravelAgency
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/travelagency_addform.css" asp-append-version="true">
</head>

<html lang="en">
<body>
    <main class="form-signin w-100">

        <form method="post" action="AddTravelAgency" enctype="multipart/form-data">
            <div class="text-center">
                <img class="mb-4" src="~/images/travista-dark.png" alt="" width="200" height="80">
            </div>
            <h1 class="h3 mb-3 fw-normal text-center">Add a TravelAgency</h1>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="emri" placeholder="Prishtina">
                        <label for="">Name</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="email" class="form-control rounded-bottom mt-2" asp-for="email"
                               placeholder="alex@gmail.com">
                        <label>Email</label>
                    </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                        <div class="input-group align-items-center my-2">
                        <span class="input-group-text" style="height: 48px;">€</span>
                        <span class="input-group-text" style="height: 48px;">0.00</span>
                        <input type="number" step="0.01" min="0" class="form-control form-control-lg" asp-for="price" placeholder="30.99">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="input-group align-items-center my-2">
                        <label class="input-group-text mt-2" style="height: 48px;">Upload</label>
                        <input type="file" class="form-control form-control-lg mt-2" asp-for="image">
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="number" class="form-control rounded-bottom mt-2" asp-for="ID_Country"
                               placeholder="Filan Fisteku">
                        <label for="">Country</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="number" class="form-control rounded-bottom mt-2" asp-for="ID_City"
                               placeholder="Filan Fisteku">
                        <label for="">City</label>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="streetAddress"
                               placeholder="Filan Fisteku">
                        <label for="">Street Address</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="additionalAddressInfo"
                               placeholder="Filan Fisteku">
                        <label for="">
                            Additional address information <span class="text-body-secondary">(Optional)</span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="postalCode"
                               placeholder="Filan Fisteku">
                        <label for="">Postal Code</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="phoneNumber"
                               placeholder="Filan Fisteku">
                        <label for="">Phone Number</label>
                    </div>
                </div>
            </div>

            <div class="row">
                    <div class="col-md-12">
                        <div class="form-floating my-2">
                            <textarea class="form-control" placeholder="Leave a comment here" asp-for="description" style="height: 100px"></textarea>
                            <label for="">Description</label>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                        <button class="w-100 btn btn-lg btn-primary mt-3" style="margin: 10px 0;" type="submit">Create Travel Agency</button>
                </div>
            </div>
        </form>
    </main>

    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
