@model List<Travista.Models.Domain.TravelAgency>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<html lang="en">
<body>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Email</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Country ID</th>
                <th scope="col">City ID</th>
                <th scope="col">Street Address</th>
                <th scope="col">Additional Info</th>
                <th scope="col">Postal Code</th>
                <th scope="col">Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var travelage in Model)
            {
                <tr>
                    <th scope="row">@travelage.ID_TravelAgency</th>
                    <td>@travelage.emri</td>
                    <td>@travelage.description</td>
                    <td>@travelage.email</td>
                    <td>@travelage.price</td>
                    <td>@travelage.image</td>
                    <td>@travelage.ID_Country</td>
                    <td>@travelage.ID_City</td>
                    <td>@travelage.streetAddress</td>
                    <td>@travelage.additionalAddressInfo</td>
                    <td>@travelage.postalCode</td>
                    <td>@travelage.phoneNumber</td>
                    <td><a href="@Url.Action("ViewTravelAgency", "TravelAgency", new { ID_TravelAgency = travelage.ID_TravelAgency })">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>