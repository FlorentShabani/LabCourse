@model Travista.Models.Domain.TravelTips
@{
}
<html>
<head>
    <link rel="stylesheet" href="~/css/destination_form.css" asp-append-version="true">
</head>
    <body>
    <main>

            <div class="container">
                <div class="container">
                    <img src="../images/forms/traveltips.png" class="img-fluid rounded-3 shadow mt-5 mb-3" alt="Example image" width="1260" height="500" loading="lazy">
                </div>

                <form asp-action="AddUserTravelTip" asp-controller="TravelTip">
                <div class="form-dest">
                    <h1 class="display-4 mt-5 fw-bold">Add travel tips for a <span class="txtcolor">city</span></h1>
                    <h1 class="display-6 mt-5 mb-10 fw-bold">What should people pay <span class="txtcoloraccent">attention</span> to?</h1>
                    <h1 class="h2 sectext fw-normal">Title & Description</h1>
                    <div class="form-small">
                        <div class="form-floating my-2">
                            <input type="text" class="form-control border border-info rounded-bottom mt-2" asp-for="Title" required
                                   placeholder="Avoid North Mitrovica">
                            <label for="floatingInput">Title</label>
                        </div>
                        <div class="form-floating my-2">
                            <select class="form-select rounded-bottom mt-3" required asp-for="ID_Country">
                                <option value="" disabled selected>Select an option</option>
                                <option value="6">Kosovo</option>
                            </select>
                            <label for="floatingInput">Country</label>
                        </div>
                        <div class="form-floating my-2">
                            <textarea class="form-control mt-3" placeholder="Leave a comment here" asp-for="Description" required
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Description</label>
                        </div>
                        <div class="form-floating my-2">
                            <button type="submit" class="w-100 btn btn-primary btncolor btntext btn-lg mt-2"><i class="fa-regular fa-paper-plane" style="margin-right: 5px;"></i>Post it!</button>
                        </div>
                    </div>
                </div>
                </form>
            </div>
    </main>

    <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>