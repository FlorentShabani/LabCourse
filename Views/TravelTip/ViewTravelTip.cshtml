@model Travista.Models.Domain.TravelTips
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/travelagency_addform.css" asp-append-version="true">
</head>

<html lang="en">
<body>
    <main class="form-signin w-100">

        <form method="post" asp-action="ViewTravelTipPost" enctype="multipart/form-data">
            <div class="text-center">
                <img class="mb-4" src="~/images/travista-dark.png" alt="" width="200" height="80">
            </div>
            <h1 class="h3 mb-3 fw-normal text-center">Update a Travel Tip</h1>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="ID_TravelTips" placeholder="Prishtina" readonly>
                        <label for="">ID of Travel Tip</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="Title" placeholder="Prishtina">
                        <label for="">Title</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="datetime" class="form-control rounded-bottom mt-2" asp-for="TravelTips_Date" placeholder="Prishtina" readonly>
                        <label for="">Date of creation</label>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="ID_Users" placeholder="Prishtina" readonly>
                        <label for="">ID of user</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating my-2">
                        <select class="form-select rounded-bottom mt-2" required asp-for="ID_Country">
                            <option value="" disabled selected>Select an option</option>
                            <option value="6">Kosovo</option>
                        </select>
                        <label for="floatingInput">Country</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating my-2">
                        <textarea class="form-control" placeholder="Description" asp-for="Description" style="height: 100px"></textarea>
                        <label>Description</label>
                    </div>
                </div>
                

                <div class="col-md-6">
                    <button class="w-100 btn btn-lg btn-primary" style="margin: 10px 0;" type="submit"><i class="fas fa-pen-to-square" style="margin-right: 3px;"></i>Update Travel Tip</button>
                </div>
                <div class="col-md-6">
                    <button class="w-100 btn btn-lg btn-danger" style="margin: 10px 0;" type="submit" formaction="@Url.Action("DeleteTravelTip", "TravelTip")"><i class="fa-regular fa-trash-can" style="margin-right: 3px"></i>Delete Travel Tip</button>
                </div>
            </div>
        </form>
    </main>

    <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
