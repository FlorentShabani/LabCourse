@model List<Travista.Models.Domain.User>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<html lang="en">
    <head>
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true">
    </head>
<body>
    <div class="container">
        <table>



            <tr>

                <th>#</th>

                <th>Fullname</th>

                <th>Username</th>

                <th>Email</th>

                <th>Birthdate</th>

                <th>Role</th>

                <th>Action</th>

            </tr>


            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.ID_Users</th>
                    <td>@user.Fullname</td>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.Birthdate.ToString("dd-MM-yyyy")</td>
                    <td>@user.role</td>
                    <td><a href="@Url.Action("View", "Users", new { ID_Users = user.ID_Users })"><i class="fas fa-pen-to-square" style="margin-right: 3px;"></i>View</a></td>
                </tr>
            }

        </table>
    </div>

    <script src="https://kit.fontawesome.com/5a5b6880b0.js" crossorigin="anonymous"></script>
</body>
</html>