@model List<Travista.Areas.Identity.Data.TravistaUser>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Users";
}

<html lang="en">
    <head>
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true">
    </head>
<body>
    <div class="container">
        <table>



            <tr>

                <th>ID of User</th>

                <th>Fullname</th>

                <th>Username</th>

                <th>Email</th>

                <th>Action</th>

            </tr>


            @foreach (var user in Model)
            {
                <tr>
                    <th scope="row">@user.Id</th>
                    <td>@user.Fullname</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td><a href="@Url.Action("ViewUsers", "Users", new { Id = user.Id })"><i class="fas fa-pen-to-square" style="margin-right: 3px;"></i>View</a></td>
                </tr>
            }

        </table>
    </div>

    <script src="https://kit.fontawesome.com/5a5b6880b0.js" crossorigin="anonymous"></script>
</body>
</html>