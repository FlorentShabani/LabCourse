@model Travista.Models.Domain.Destination
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/travelagency_addform.css" asp-append-version="true">
</head>

<html lang="en">
<body>
    <main class="form-signin w-100">

        <form method="post" action="AddDestination" enctype="multipart/form-data">
            <div class="text-center">
                <img class="mb-4" src="~/images/travista-dark.png" alt="" width="200" height="80">
            </div>
            <h1 class="h3 mb-3 fw-normal text-center">Add a Destination</h1>

            <div class="row">

                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="Emri" placeholder="Prishtina">
                        <label for="">Name</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <select class="form-select rounded-bottom mt-2" required asp-for="Tag">
                            <option value="" disabled selected>Select an option</option>
                            <option value="Thing To Do">Thing To Do</option>
                            <option value="Food">Food</option>
                            <option value="Other">Other</option>
                        </select>
                        <label for="floatingInput">Tag</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="Address"
                               placeholder="alex@gmail.com">
                        <label>Address</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="AdditionalAddress"
                               placeholder="alex@gmail.com">
                        <label>Additional Address</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="Longitude"
                               placeholder="Filan Fisteku">
                        <label for="">Longitude</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-floating my-2">
                        <input type="text" class="form-control rounded-bottom mt-2" asp-for="Latitude"
                               placeholder="Filan Fisteku">
                        <label for="">Latitude</label>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating my-2">
                        <select class="form-select rounded-bottom mt-2" required asp-for="ID_City">
                            <option value="" disabled selected>Select an option</option>
                            <option value="19">Ferizaj</option>
                            <option value="20">Gjakova</option>
                            <option value="12">Gjilan</option>
                            <option value="22">Mitrovica</option>
                            <option value="21">Peja</option>
                            <option value="13">Prishtina</option>
                            <option value="14">Prizren</option>
                        </select>
                        <label for="">City ID</label>
                    </div>
                </div>


                <div class="col-md-12">
                    <div class="input-group align-items-center mb-2">
                        <label class="input-group-text mt-2" style="height: 48px;">Upload</label>
                        <input type="file" class="form-control form-control-lg mt-2" asp-for="Foto">
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-floating my-2">
                        <textarea class="form-control" placeholder="Leave a comment here" asp-for="Description" style="height: 100px"></textarea>
                        <label for="">Description</label>
                    </div>
                </div>
                <div class="col-md-12">
                    <button class="w-100 btn btn-lg btn-primary mt-3" style="margin: 10px 0;" type="submit">Create Destination</button>
                </div>
            </div>

        </form>
    </main>

    <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
