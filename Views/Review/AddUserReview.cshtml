@model Travista.Models.Domain.Review;
@{
}
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/review_form.css" asp-append-version="true">
    <script src="/js/star.js"></script>
</head>
<body>
    <main>

            <div class="container">
                <div class="container">
                    <img src="../images/forms/reviews.png" class="img-fluid border rounded-3 shadow-lg mt-5 mb-3"
                         alt="Example image" width="1260" height="500" loading="lazy">
                </div>

                <form asp-action="AddUserReview" asp-controller="Review">
                <div class="form-dest">
                    <h1 class="display-4 my-5 fw-bold">Add a review on $name</h1>
                    <h1 class="display-6 mt-5 mb-10 fw-bold">Tell us about your review?</h1>
                    <h1 class="h2 fw-normal">Rating & Comment</h1>
                    <div class="form-small">
                        <p>Select a rating:</p>
                        <div class="form-floating my-2">
                            <input type="number" min="1" max="5" class="form-control rounded-bottom mt-2" asp-for="Rating" placeholder="Prishtina">
                            <label for="">Rating</label>
                        </div>
                        <div class="form-floating my-2">
                            <textarea class="form-control" placeholder="Leave a comment here" asp-for="Comment" required
                                      style="height: 100px"></textarea>
                            <label for="floatingTextarea2">Comment</label>
                        </div>
                        <div class="form-floating my-2">
                            <input type="text" class="form-control rounded-bottom mt-3" asp-for="ID_Destination" required
                                   placeholder="Avoid North Mitrovica">
                            <label for="floatingInput">Title</label>
                        </div>



                        <div class="form-floating my-2">
                            <button type="submit" class="btn btn-primary mt-3">Post it</button>
                        </div>
                    </div>
                </div>
                </form>
            </div>
    </main>

    <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/5a5b6880b0.js" crossorigin="anonymous"></script>
</body>

</html>