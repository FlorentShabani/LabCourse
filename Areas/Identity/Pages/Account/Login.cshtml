@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<head>
    <link rel="stylesheet" href="~/css/sign-in.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/colorway.css" asp-append-version="true">
</head>


<div class="form-signin w-100 siform rounded-3 border border-info shadow">
    <div class="row">
        <div class="col-md-12">
            <section>
                <form id="account" method="post">
                    <h2 class="text-center">Use an <span class="txtcolor">account</span> to log in.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control rounded-bottom mt-3" autocomplete="email" aria-required="true" />
                        <label asp-for="Input.Email">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control rounded-top mt-2" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox mt-2">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary shadow mt-2"><i class="fa-solid fa-right-to-bracket" style="margin-right: 5px;"></i>Log in</button>
                    </div>
                    <div class="text-center mt-4 forgot">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword"><i class="fa-solid fa-clipboard-question" style="margin-right: 5px;"></i>Forgot your password?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><i class="fa-solid fa-user-plus" style="margin-right: 5px;"></i>Register as a new user</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation"><i class="fa-solid fa-arrow-rotate-right" style="margin-right: 5px;"></i>Resend email confirmation</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/popperjs/core/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
}
