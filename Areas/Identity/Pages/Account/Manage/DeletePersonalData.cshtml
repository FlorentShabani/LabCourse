@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}


<div class="form-signin w-100 siform rounded-3 border border-info shadow">
    <div class="row">
        <div class="col-md-12">
            <div>
                <form id="delete-user" method="post">
                    <h2 class="text-center"><i class="fa-solid fa-user-minus txtcolor" style="margin-right: 5px;"></i>@ViewData["Title"]</h2>
                    <hr />
                    <p class="text-center">
                        <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
                    </p>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @if (Model.RequirePassword)
                    {
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                            <label asp-for="Input.Password" class="form-label"></label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    }
                    <button class="w-100 btn btn-lg btn-danger mt-2" type="submit"><i class="fa-solid fa-trash-can" style="margin-right: 5px;"></i>Delete data and close my account</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
