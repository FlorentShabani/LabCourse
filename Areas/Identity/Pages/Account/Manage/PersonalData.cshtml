@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="form-signin w-100 siform rounded-3 border border-info shadow">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center"><i class="fa-solid fa-building-shield txtcolor" style="margin-right: 5px;"></i>@ViewData["Title"]</h2>
            <hr />
            <p class="text-center">Your account contains personal data that you have given us. This page allows you to download that data.</p>
            <p class="text-center"><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>
            <!-- -->
        </div>

        <div class="col-md-6">
            <form id="download-data" asp-page="DownloadPersonalData" method="post">
                <button class="w-100 btn btn-primary" type="submit"><i class="fa-solid fa-download" style="margin-right: 5px;"></i>Download</button>
            </form>
        </div>
        <div class="col-md-6">
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="w-100 btn btn-danger"><i class="fa-solid fa-trash-can" style="margin-right: 5px;"></i>Delete</a>
            </p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
