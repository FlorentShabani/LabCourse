@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<head>
    <link rel="stylesheet" href="~/css/sign-in.css" asp-append-version="true">
</head>

<div class="form-signin w-100 siform rounded-3 border border-info shadow">
    <div class="row">
        <div class="col-md-12">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="text-center">Create a <span class="txtcolor">new</span> account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Fullname" class="form-control mt-3" autocomplete="fullname" aria-required="true" />
                    <label asp-for="Input.Fullname"></label>
                    <span asp-validation-for="Input.Fullname" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.UserName" class="form-control mt-2" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.UserName"></label>
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mt-2" autocomplete="email" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control mt-2" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control mt-2" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary shadow mt-2"><i class="fa-solid fa-user-plus" style="margin-right: 5px;"></i>Register</button>
                <div class="text-center mt-4 forgot">
                    <p>
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"><i class="fa-solid fa-right-to-bracket" style="margin-right: 5px;"></i>Already a existing user</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
