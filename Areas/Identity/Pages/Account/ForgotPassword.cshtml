@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<head>
    <link rel="stylesheet" href="~/css/resend.css" asp-append-version="true">
    <link rel="stylesheet" href="~/css/colorway.css" asp-append-version="true">
</head>


<div class="form-signin w-100 siform rounded-3 border border-info shadow">
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <h2 class="text-center">@ViewData["Title"]</h2>
                <h4 class="text-center">Enter your <span class="txtcolor">email</span>.</h4>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control mt-2" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Reset Password</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
